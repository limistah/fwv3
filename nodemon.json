{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "tests"],
  "verbose": true,
  "execMap": {
    "build": "npm run build"
  },
  "events": {
    "restart": "echo 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
